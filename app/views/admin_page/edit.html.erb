<div class="container text-center mt-5">
    <p class="lead text-muted">Edit post <%= "#{@post.id} - #{@post.title}" %> </p>
    <%= form_for :post do |f| %>
        <div class="form-group">
            Title: <%= f.text_field :title, placeholder: @post.title, class: "form-control mb-1"%>
            Intro: <%= f.text_area :intro, placeholder: @post.intro, class: "form-control mb-1" %>
            Reading time: <%= f.text_field :reading_time, placeholder: @post.reading_time, class: "form-control mb-1" %>
            Thumbnail: <%= f.text_field :thumbnail_url, placeholder: @post.thumbnail_url, class: "form-control mb-1" %>
            Content: <%= f.text_area :content, placeholder: @post.content, class: "form-control mb-1" %>
            <%= f.hidden_field :id %>
            <%= f.submit class: 'btn btn-success' %>
        </div>
    <% end %>
    <%= link_to "Back to admin page", admin_page_index_path, {:class =>"btn btn-primary my-2"} %>
</div>